---
import ContentSection from "~/components/content-section.astro";
---

<ContentSection title="Venue" id="venue">
  <Fragment slot="lead">
    <a
      href="https://www.marriott.com/en-us/hotels/laxap-los-angeles-airport-marriott/overview/"
      target="_blank"
      >Los Angeles Airport Marriott
    </a>
    <br />
    <a
      class="text-base"
      href="https://goo.gl/maps/EXWdUFLcrGkjUH3ZA"
      target="_blank">5855 W Century Blvd, Los Angeles, CA 90045</a
    >
    <br />
    <a class="text-base" href="tel:+13106415700">+1 310-641-5700</a>
    <br />
    <span class="text-base"
      >Check-in: <span class="text-primary">3pm</span>, Check-out: <span
        class="text-primary">11am</span
      >
      <br />
      Conference Rooms:<br /><span class="text-primary"
        >Pacific Coast 2, Pacific Coast 3
        <br />California 2, California 3, California 4</span
      >
    </span>
  </Fragment>
  <div class="max-w-6xl space-y-2">
    <div class="mapouter">
      <div class="gmap_canvas">
        <iframe
          class="m-auto"
          width="320"
          height="320"
          id="gmap_canvas"
          src="https://maps.google.com/maps?q=5855%20W%20Century%20Blvd,%20Los%20Angeles,%20CA%2090045&t=&z=13&ie=UTF8&iwloc=&output=embed"
          frameborder="0"
          scrolling="no"
          marginheight="0"
          marginwidth="0"></iframe><style>
          .mapouter {
            position: relative;
            text-align: right;
            height: 320px;
            width: 320px;
          }
        </style><style>
          .gmap_canvas {
            overflow: hidden;
            background: none !important;
            height: 320px;
            width: 320px;
          }
        </style>
      </div>
    </div>
  </div>
</ContentSection>
